
# top-most EditorConfig file
root = true

# file formatting defaults
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# javascript
[*.js]
indent_style = tab
indent_size = 4

# markdown
[*.md]
trim_trailing_whitespace = false

# npm and bower
[{package.json,bower.json,.bowerrc}]
indent_style = space
indent_size = 2
